<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="16dp"
        android:layout_margin="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/appointment_student"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_white"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/blue"
                android:src="@drawable/ic_baseline_person_blue_24"
                app:riv_border_color="@color/blue"
                app:riv_border_width="2dp"
                app:riv_corner_radius="150dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/student_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_bold"
                    android:text="@string/none"
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/student_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_regular"
                    android:text="@string/none"
                    android:textColor="@color/blue" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"

            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/appointment_title"
                android:layout_marginBottom="4dp"
                android:layout_width="0dp"
                android:fontFamily="@font/ubuntu_medium"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/none" />

        </LinearLayout>

        <TextView
            android:id="@+id/appointment_description"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:fontFamily="@font/ubuntu_regular"
            android:text="@string/none" />
        
        <LinearLayout
            android:paddingTop="4dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_baseline_location_on_24"
                app:tint="@color/blue" />
            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/appointment_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:fontFamily="@font/ubuntu_regular"
                android:text="@string/none" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="4dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/baseline_alarm_24"
                app:tint="@color/blue" />
            <TextView
                android:id="@+id/appointment_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:fontFamily="@font/ubuntu_regular"
                android:text="@string/none" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="4dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/baseline_alarm_on_24"
                app:tint="@color/blue" />
            <TextView
                android:id="@+id/appointment_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:fontFamily="@font/ubuntu_regular"
                android:text="@string/none" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="4dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/container_lecture1"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_baseline_person_24"
                app:tint="@color/blue" />
            <TextView
                android:id="@+id/appointment_lecturer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:fontFamily="@font/ubuntu_regular"
                android:text="@string/none" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="4dp"
            android:id="@+id/container_lecture2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_baseline_person_24"
                app:tint="@color/blue" />
            <TextView
                android:id="@+id/appointment_lecturer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:fontFamily="@font/ubuntu_regular"
                android:text="@string/none" />
        </LinearLayout>

        <com.google.android.material.chip.Chip
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:text="@string/none"
            app:chipBackgroundColor="@color/blue"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>